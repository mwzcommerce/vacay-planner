<div class="product-view">
    <div class="item-container">
        <div class="product-genaral-details">
            <input type="hidden" name="id" value="{{product.id}}" id="productId"/>
            <div class="product-name">
                <h3 class="heading1">
                    Product Details
                    <a href="../productDetails/{{product.id}}" class="edit-general-details"><span class="icon-pencil"></span></a>
                </h3>

                <div class="clearfix"></div>
                <ul>
                    <li>
                        <label>Name:</label>{{product.name}}
                    </li>
                    <li>
                        <label>Description:</label>{{product.description}}
                    </li>
                    <li>
                        <label>City:</label>{{product.city}}
                    </li>
                    <li>
                        <label>State:</label>{{product.state}}
                    </li>
                    <li>
                        <label>Country:</label>{{product.country}}
                    </li>
                    <li>
                        <label>Email Address:</label>{{product.emailAddress}}
                    </li>
                    <li>
                        <label>Category:</label>{{product.category}}
                    </li>
                    <li>
                        <label>Route Tips:</label>{{product.routeTips}}
                    </li>
                    <li>
                        <label>Star Rating:</label>{{product.starRating}}
                    </li>                    
                    <li>
                        <label>Is Active:</label>{{product.is_active}}
                    </li>
                </ul>
            </div>
        </div>

        <div class="product-image-details">
            <div class="product-name">
                <h3 class="heading1">
                    Product Images
                    <a href="../{{product.id}}/{{product.category}}/add-new-image" class="edit-address-details"><span class="icon-plus"></span></a>
                </h3>
                <table class="vacay-table">
                    <tr>
                        <th>Image</th>
                        <th>Name</th>
                        <th>Caption</th>
                        <th>Title</th>
                        <th>Sort Order</th>
                        <th>Category</th>
                        <th class="vacay-action">Action</th>
                    </tr>
                    {{#each product.images}}
                    <tr>
                        <td><img src="/uploads/{{../product.category}}/{{this.imageUrl}}" height=50/></td>
                        <td>{{this.imageUrl}}</td>
                        <td>{{this.captionText}}</td>
                        <td>{{this.title}}</td>
                        <td>{{../product.category}}</td>                        
                        <td>{{this.sortOrder}}</td>
                        <td>
                            <div class="delete-edit-container">
                                <a href="../{{../product.id}}/image/{{this._id}}/{{../product.category}}" class="edit" title="Edit the row">Edit</a> /
                                <a href="/{{../product.id}}/{{../product.category}}/image/{{this._id}}/{{this.imageUrl}}" class="delete" title="Delete the row">Delete</a>
                            </div>
                        </td>
                    </tr>

                    {{/each}}
                </table>


                <div class="clearfix"></div>

            </div>
        </div>

        <div class="product-address-details">

            <div class="product-address-details">

                <h3 class="heading1">
                    Address Details
                    <a href="../{{product.id}}/add-new-address" class="edit-address-details"><span class="icon-plus"></span></a>
                </h3>
                <div class="clearfix"></div>

                    <table class="vacay-table">
                        <tr>
                            <th>Address</th>
                            <th>City</th>
                            <th>State</th>
                            <th>Postal Code</th>
                            <th class="vacay-action">Action</th>
                        </tr>
                        {{#each product.addresses}}
                        <tr>
                            <td>{{this.address1}},{{this.address2}}</td>
                            <td>{{this.city}}</td>
                            <td>{{this.state}}</td>
                            <td>{{this.postalCode}}</td>
                            <td>
                                <div class="delete-edit-container">
                                    <a href="../{{../product.id}}/addresses/{{this._id}}" class="edit" title="Edit the row">Edit</a> /
                                    <a href="/{{../product.id}}/address/{{this._id}}" class="delete" title="Delete the row">Delete</a>
                                </div>
                            </td>
                        </tr>
                        {{/each}}
                    </table>
                <div class="clearfix"></div>
            </div>
        </div>
        <div class="product-address-details">

            <div class="product-address-details">

                <h3 class="heading1">
                    Classifications Details
                    <a href="../{{product.id}}/classification" class="edit-address-details"><span class="icon-plus"></span></a>
                </h3>
                <div class="clearfix"></div>

                    <table class="vacaytable">
                        <tr>
                            <th>Name</th>
                            <th class="vacay-action">Action</th>
                        </tr>
                        {{#each product.classifications}}
                        <tr>

                            <td>{{this.name}}</td>
                            <td>
                                <div class="delete-edit-container">
                                    <a href="../{{../product.id}}/productclassification/{{this._id}}" class="delete" title="Delete the row">Delete</a>
                                </div>
                            </td>
                        </tr>
                        {{/each}}
                    </table>
                <div class="clearfix"></div>
            </div>
        </div>
        <div class="product-phonenumber-details">
            <div class="">
                <h3 class="heading1">
                    Phone Details
                    <a href="../{{product.id}}/add-new-phoneNumber" class="add-phoneNumber-details"><span class="icon-plus"></span></a>
                </h3>
                <div class="clearfix"></div>
                        <table class="vacay-table">
                            <tr>
                                <th>Contact Name</th>
                                <th>Contact Number</th>
                                <th class="vacay-action">Action</th>
                            </tr>
                            {{#each product.phoneNumbers}}
                            <tr>
                                <td>{{this.contactType}}</td>
                                <td>{{this.contactNumber}}</td>
                                <td>
                                    <div class="delete-edit-container">
                                        <a href="../{{../product.id}}/phone/{{this._id}}" class="edit" title="Edit the row">Edit</a> /
                                        <a href="/{{../product.id}}/phoneNumber/{{this._id}}" class="delete" title="Delete the row">Delete</a>
                                    </div>
                                </td>
                            </tr>
                            {{/each}}
                        </table>


            </div>
        </div>

        <div class="product-facility-details">
            <div class="">
                <h3 class="heading1">
                    Facilities Details
                    <div class="facilityMsg pull-right"></div>
                    <!--<a href="../{{product.id}}/add-new-facility" class="add-facility-detail"><span class="icon-plus"></span></a>-->
                </h3>
                <div class="clearfix"></div>
                <div class="facilities-list" data-selected-list="{{#each product.facilities}}{{this.facilityId}},{{/each}}">
                
                    <ul>
                        {{#each facilities}}
                            <li><input type="checkbox" name="facilities[]" id="{{this._id}}" value="{{this._id}}"/> {{this.name}}</li>
                        {{/each}}
                    </ul>
                    <div class="clearfix"></div>
                </div>
