                            </tr>-->
                        {{/each}}
                    </table>
                </div>
                
            </div>
        </div>

        <div class="product-amenities-details">
            <div class="">
                <h3 class="heading1">
                    Amenities Details
                    <a href="../{{product.id}}/add-new-amenity" class="add-amenity-details"><span class="icon-plus"></span></a>
                </h3>
                <div class="clearfix"></div>


                        <!--<div class="amenities-container">
                            <div class="delete-edit-container pull-right">
                                <a href="../{{../product.id}}/amenity/{{this._id}}" class="edit" title="Edit the row">Edit</a> /
                                <a href="/{{../product.id}}/amenity/{{this._id}}" class="delete" title="Delete the row">Delete</a>
                            </div>
                            <p><label>Description: </label>{{this.description}}</p>
                        </div>-->
                        <table class="vacay-table">
                            <tr>
                                <th>Description</th>
                                <th class="vacay-action">Action</th>
                            </tr>
                            {{#each product.amenities}}
                            <tr>
                                <td>{{this.description}}</td>
                                <td>
                                    <div class="delete-edit-container">
                                        <a href="../{{../product.id}}/amenity/{{this._id}}" class="edit" title="Edit the row">Edit</a> /
