    <property name="prefix">
        <value>/WEB-INF/views/</value>
    </property>
    <property name="suffix">
        <value>.jsp</value>
    </property>
</bean>

<mongo:mongo host="localhost" port="27017"/>
<mongo:db-factory dbname="vacayplanner"/>

<mongo:repositories base-package="com.vacayplanner.repository.*"/>


